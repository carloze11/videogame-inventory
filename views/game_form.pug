extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text' placeholder='Title (Halo 2)' name='title' required='true' value=(undefined===game ? '' : game.title) )
      label(for='dev') Developer:
      input#dev.form-control(type='text' placeholder='Developer (Bungie)' name='dev' required='true' value=(undefined===game ? '' : game.dev))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='The best multiplayer experience...' name='description' value=(undefined===game ? '' : game.description) )
    div.form-group
      label(for='release_date') Release Date:
      input#release_date.form-control(type='date' name='release_date' value=(undefined===game ? '' : game.release_date) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg