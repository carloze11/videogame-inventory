extends layout

block content

  h1 Game: #{game.title}
  p #{game.description}
  p #{game.released}

  div(style='margin-left:20px;margin-top:20px')

    h4 Weapons in Game

    dl
      each weapon in game_weapons
        dt
          a(href=weapon.url) #{weapon.name}
        dd #{weapon.description}

      else
        p This game has no weapons...yet.

  hr
  p
    a(href=game.url+'/delete') Delete game
  p
    a(href=game.url+'/update') Update game